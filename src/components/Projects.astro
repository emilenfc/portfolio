---
<h2>{title}</h2>
<div class="projects-container">
  {project.map((project) => ( 
    <div class="project-card">
      <div class="project-image" style={{ backgroundImage: `url(${project.imageUrl})` }}>
        <div class="project-overlay">
          <div class="project-info">
            <h3 class="title-project">{project.title}</h3>
            <p>{project.description}</p>
            <div class="technologies-used">
              {project.technologies.map((tech) => (
                <span>{tech}</span>
              ))}
            </div>
            <div class="project-links">
              <a href={project.githubLink} target="_blank" rel="noopener noreferrer">GitHub</a>
              <a href={project.hostedLink} target="_blank" rel="noopener noreferrer">View Hosted</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  ))}
</div>

<style>
  h2 {
    text-align: center;
    margin-bottom: 2rem;
  }
  h3 {
    margin-bottom: 0.5rem;
    color: aqua;
  }
  
  .projects-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    gap: 2rem;
    padding: 1rem;
  }

  .project-card {
    flex: 0 0 calc(33.33% - 2rem); /* Adjust for 3 projects per row */
    max-width: 300px;
    width: fit-content;
    height: fit-content;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .project-image {
    height: 350px;
    background-size: cover;
    background-position: center;
    position: relative;
  }

  .project-overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    /* opacity: 0; */
    /* transition: opacity 0.3s ease; */
  }

  /* .project-card:hover .project-overlay {
    opacity: 1;
  } */

  .project-info {
    text-align: center;
    color: #fff;
    padding: 1rem;
  }

  .project-links {
    margin: 2rem;
    display: flex;
    justify-content: center;
  }
  

  .project-links a {

    border: 3px solid #feffff;
    border-radius: 10px;
    padding: 5px;
    color: #fff;
    text-decoration: none;
    margin: 0 0.5rem;
    transition: color 0.3s ease;
  }

  .project-links a:hover {
    color: #007bff;
    border-color: #007bff;
    font-weight: bold;
    padding: 2px
  }

  .technologies-used {
    margin-top: 0.5rem;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 0.2rem;
  }


  .technologies-used span {
    margin-right: 0.5rem;
    background-color: #007bff;
    color: #fff;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.8rem;
  }

  @media (max-width: 992px) {
    .project-card {
      flex: 0 0 calc(50% - 2rem); 
    }
  }

  @media (max-width: 768px) {
    .project-card {
      flex: 0 0 calc(100% - 2rem);
    }
  }
</style>
